{
  "app": {
    "name": "Pathology Slide Viewer",
    "version": "1.0.0",
    "mode": "server"
  },
  "services": {
    "backend": {
      "port": 3102,
      "host": "0.0.0.0"
    },
    "gui": {
      "port": 3003,
      "enabled": true,
      "autoStart": false
    },
    "conversion": {
      "port": 3001,
      "enabled": true,
      "autoStart": true,
      "maxConcurrent": 8,
      "healthCheckInterval": 10000
    }
  },
  "storage": {
    "slidesDir": "public/slides",
    "dziDir": "public/dzi",
    "tempDir": "temp",
    "uploadsDir": "uploads",
    "cacheDir": "cache",
    "logsDir": "logs"
  },
  "conversion": {
    "autoProcessor": {
      "enabled": true,
      "maxParallelSlides": 6,
      "watchInterval": 1000,
      "stabilityDelay": 5000
    },
    "vips": {
      "concurrency": 8,
      "maxMemoryMB": 4096,
      "bufferSizeMB": 512,
      "cacheMaxMB": 1024,
      "discThresholdMB": 100,
      "progress": true,
      "info": false,
      "warning": true
    },
    "icc": {
      "enabled": true,
      "useEmbedded": true,
      "intermediateFormat": "tiff",
      "compression": "lzw",
      "quality": 95
    },
    "dzi": {
      "tileSize": 256,
      "overlap": 1,
      "quality": 90,
      "layout": "dz",
      "embedIcc": false,
      "sequential": true,
      "novector": false
    }
  },
  "security": {
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3003", "http://localhost:3102"]
    },
    "apiKey": {
      "required": false,
      "key": ""
    }
  },
  "performance": {
    "enableOptimizations": true,
    "autoDeleteOriginal": false,
    "compressionLevel": 6
  },
  "logging": {
    "level": "info",
    "console": true,
    "file": true,
    "maxSize": "10MB",
    "maxFiles": 5
  }
}
