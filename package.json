{
  "name": "pathology-slide-viewer",
  "version": "1.0.0",
  "description": "Web-based pathology slide viewer with automated conversion and remote access",
  "main": "electron-main.js",
  "scripts": {
    "start": "node --max-old-space-size=4096 server.js",
    "dev": "nodemon --max-old-space-size=4096 server.js",
    "gui": "node --max-old-space-size=2048 gui-server.js",
    "conversion": "node --max-old-space-size=4096 conversion-server.js",
    "all": "concurrently \"npm run start\" \"npm run gui\" \"npm run conversion\"",
    "dev:all": "concurrently \"npm run dev\" \"nodemon --max-old-space-size=2048 gui-server.js\" \"nodemon --max-old-space-size=4096 conversion-server.js\"",
    "config": "node -e \"console.log(JSON.stringify(require('./config.js').getSummary(), null, 2))\"",
    "validate": "node -e \"const config = require('./config.js'); console.log('âœ… Configuration loaded successfully'); console.log(config.getSummary());\"",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev:all\" \"wait-on -t 30000 http://localhost:3101/api/slides && electron .\"",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.6.7",
    "sharp": "^0.33.2",
    "wasm-vips": "^0.0.9",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^32.2.7",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.2",
    "wait-on": "^7.2.0"
  }
}
