{
  "name": "pathology-slide-viewer",
  "version": "1.0.0",
  "description": "Web-based pathology slide viewer with automated conversion and remote access",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "gui": "node gui-server.js",
    "conversion": "node conversion-server.js",
    "all": "concurrently \"npm run start\" \"npm run gui\" \"npm run conversion\"",
    "dev:all": "concurrently \"npm run dev\" \"nodemon gui-server.js\" \"nodemon conversion-server.js\"",
    "config": "node -e \"console.log(JSON.stringify(require('./config.js').getSummary(), null, 2))\"",
    "validate": "node -e \"const config = require('./config.js'); console.log('âœ… Configuration loaded successfully'); console.log(config.getSummary());\""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.6.7",
    "sharp": "^0.33.2",
    "wasm-vips": "^0.0.9",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^32.2.7",
    "nodemon": "^3.0.2"
  }
}
