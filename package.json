{
  "name": "pathology-slide-viewer",
  "version": "1.0.0",
  "description": "Web-based pathology slide viewer with remote access",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend": "set PORT=3102 && node frontend-server.js",
    "backend": "node server.js",
    "dev:frontend": "set PORT=3102 && nodemon frontend-server.js",
    "dev:backend": "nodemon server.js",
    "gui": "node gui-server.js",
    "gui:dev": "set NODE_ENV=development && node gui-server.js",
    "conversion-server": "set CONVERSION_PORT=3001 && set MAX_CONCURRENT=8 && node conversion-server.js",
    "start:conversion-server": "set CONVERSION_PORT=3001 && set MAX_CONCURRENT=8 && node conversion-server.js",
    "test:hybrid": "node test-hybrid-system.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.6.7",
    "sharp": "^0.33.2",
    "wasm-vips": "^0.0.9",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^32.2.7",
    "nodemon": "^3.0.2"
  }
}
